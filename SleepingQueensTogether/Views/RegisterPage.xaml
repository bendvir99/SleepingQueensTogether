<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:SleepingQueensTogether.Models"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    Title="RegisterPage"
    x:DataType="vm:RegisterPageViewModel">

    <Grid
        ColumnDefinitions="*,*"
        RowDefinitions="Auto,Auto,Auto,Auto"
        RowSpacing="20">
        <Label
            Grid.ColumnSpan="2"
            FontAttributes="Bold"
            Text="{x:Static m:Strings.RegisterTitleText}" />
        <Label
            Grid.Row="1"
            Text="{x:Static m:Strings.RegisterUsernameText}"
            VerticalOptions="Center" />
        <Border Grid.Row="1" Grid.Column="1">
            <Entry Placeholder="{x:Static m:Strings.UsernamePlaceholderText}" Text="{Binding Username}" />
        </Border>
        <Label
            Grid.Row="2"
            Text="{x:Static m:Strings.RegisterPasswordText}"
            VerticalOptions="Center" />
        <Border Grid.Row="2" Grid.Column="1">
            <Entry Placeholder="{x:Static m:Strings.PasswordPlaceholderText}" Text="{Binding Password}" />
        </Border>
        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Command="{Binding RegisterCommand}"
            Text="{x:Static m:Strings.RegisterButtonText}" />
    </Grid>
</ContentPage>