<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:SleepingQueensTogether.Models"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <Grid>
        <Image Aspect="AspectFill" Source="sleepingqueens.jpg" />
        <Grid ColumnDefinitions="*" RowDefinitions="0.4*, *, 0.6*">
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*" RowDefinitions="*, *">
                <Label
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    FontAttributes="Bold"
                    FontSize="13"
                    HorizontalOptions="Start"
                    Text="{Binding Total}" />
                <Label
                    Grid.Column="1"
                    Grid.ColumnSpan="6"
                    Margin="45,0,0,0"
                    FontAttributes="Bold"
                    FontSize="20"
                    HeightRequest="30"
                    Text="{Binding Timeleft}" />
                <Image
                    Grid.Row="1"
                    Grid.Column="2"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="orangecard.png" />
                <Image
                    Grid.Row="1"
                    Grid.Column="3"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="orangecard.png" />
                <Image
                    Grid.Row="1"
                    Grid.Column="4"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="orangecard.png" />
                <Image
                    Grid.Row="1"
                    Grid.Column="5"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="orangecard.png" />
                <Image
                    Grid.Row="1"
                    Grid.Column="6"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="orangecard.png" />
            </Grid>
            <Grid
                Grid.Row="1"
                ColumnDefinitions="*,*,*,*,*,*, *"
                RowDefinitions="*,*,*,*, *, *">
                <Button
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    Command="{Binding StartGameCommand}"
                    FontSize="18"
                    HeightRequest="50"
                    IsVisible="{Binding CanStartGame}"
                    Text="{x:Static m:Strings.StartGame}"
                    WidthRequest="140" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    Command="{Binding ChangeTurnCommand}"
                    FontSize="18"
                    HeightRequest="50"
                    Text="{x:Static m:Strings.StartGame}"
                    WidthRequest="140" />
                <ImageButton
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,40,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[0]}" />
                <ImageButton
                    Grid.Row="1"
                    Margin="10,40,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[1]}" />
                <ImageButton
                    Grid.Row="1"
                    Grid.Column="6"
                    Margin="0,40,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[6]}" />
                <ImageButton
                    Grid.Row="1"
                    Grid.Column="5"
                    Margin="0,40,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[7]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10,60,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[2]}" />
                <ImageButton
                    Grid.Row="2"
                    Margin="10,60,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[3]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="6"
                    Margin="0,60,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[8]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="5"
                    Margin="0,60,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[9]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,80,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[4]}" />
                <ImageButton
                    Grid.Row="3"
                    Margin="10,80,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[5]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="6"
                    Margin="0,80,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[10]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="5"
                    Margin="0,80,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[11]}" />

            </Grid>
            <Grid
                Grid.Row="2"
                ColumnDefinitions="*, *, *, *, *, *, *, *, *"
                RowDefinitions="*, *">

                <ImageButton
                    Grid.Column="2"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding CardImages[0]}" />
                <ImageButton
                    Grid.Column="3"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding CardImages[1]}" />
                <ImageButton
                    Grid.Column="4"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding CardImages[2]}" />
                <ImageButton
                    Grid.Column="5"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding CardImages[3]}" />
                <ImageButton
                    Grid.Column="6"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding CardImages[4]}" />
                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="9"
                    FontAttributes="Bold"
                    FontSize="20"
                    HeightRequest="30"
                    Text="{Binding MyName}"
                    VerticalOptions="Start" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>