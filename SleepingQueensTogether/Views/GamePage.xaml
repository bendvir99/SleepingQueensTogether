<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <VerticalStackLayout>
        <Label HorizontalOptions="Center" Text="{Binding OpponentName}" />
        <Label
            Margin="50"
            HorizontalOptions="Center"
            Text="{Binding StatusMessage}" />
        <Label HorizontalOptions="Center" Text="{Binding MyName}" />
        <Button
            Command="{Binding ChangeTurnCommand}"
            HorizontalOptions="Center"
            Text="Change Turn" />
    </VerticalStackLayout>
</ContentPage>