<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:SleepingQueensTogether.Models"
    xmlns:v="clr-namespace:SleepingQueensTogether.Views"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    x:DataType="vm:MainPageVM"
    IsBusy="{Binding IsBusy}">
    <VerticalStackLayout>
        <Grid
            Padding="5"
            ColumnDefinitions="*,*"
            ColumnSpacing="5">
            <Picker
                Title="{x:Static m:Strings.SelectPlayerCount}"
                FontSize="20"
                HorizontalTextAlignment="Center"
                ItemDisplayBinding="{Binding DisplayName}"
                ItemsSource="{Binding GameSizes}"
                SelectedItem="{Binding SelectedGameSize}" />
            <Button
                Grid.Column="1"
                Margin="10"
                Command="{Binding AddGameCommand}"
                FontSize="Body"
                HorizontalOptions="Fill"
                Text="{x:Static m:Strings.AddGame}" />
        </Grid>
        <ListView ItemsSource="{Binding GamesList}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:GameModel">
                    <ViewCell>
                        <Grid ColumnDefinitions="*,2*,0.5*">
                            <Label
                                Grid.Column="0"
                                Margin="20,0,0,0"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalTextAlignment="Start"
                                Text="{Binding HostName}" />
                            <Label
                                Grid.Column="1"
                                FontSize="20"
                                Text="{Binding Created}" />
                            <Label
                                Grid.Column="2"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="{Binding PlayerCount}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
